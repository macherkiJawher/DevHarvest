{% extends 'client.html.twig' %}

{% block title %} Mon Panier {% endblock %}

{% block body %}
    <h1>Mon Panier</h1>

    {% if panier is empty %}
        <div class="alert alert-warning">Votre panier est vide.</div>
    {% else %}
        <table class="table">
            <thead>
                <tr>
                    <th>Produit</th>
                    <th>Quantité</th>
                    <th>Prix</th>
                    <th>Total</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                {% for item in panier %}
                    <tr>
                        <td>{{ item.produit.nom }}</td>
                        <td>{{ item.quantite }}</td>
                        <td>{{ item.produit.prixunitaire }} €</td>
                        <td>{{ item.produit.prixunitaire * item.quantite }} €</td>
                        <td>
                            <a href="{{ path('app_panier_supprimer', {'id': item.produit.id}) }}" 
                               class="btn btn-danger btn-sm">Supprimer</a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>

        <a href="{{ path('app_panier_vider') }}" class="btn btn-warning">Vider le panier</a>
    {% endif %}
{% endblock %}
