{% extends 'client.html.twig' %}

{% block title %}Liste des Produits{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="text-center mb-4">Liste des Produits</h1>

        

        <div class="text-center mb-4">
            <a href="{{ path('app_produit_new') }}" class="btn btn-primary">
                <i class="fas fa-plus"></i> Ajouter un produit
            </a>
        </div>

        <div class="row mt-4">
            {% for produit in produits %}
                <div class="col-lg-4 col-md-6 mb-4">
                    <div class="card shadow-lg h-100 d-flex flex-column">
                        <div class="card-img-top text-center" style="height: 200px; overflow: hidden;">
                            {% if produit.image %}
                                <img src="{{ asset('uploads/produits/' ~ produit.image) }}" 
                                     alt="{{ produit.nom }}" 
                                     class="img-fluid" 
                                     style="object-fit: cover; height: 100%; width: 100%;" 
                                     loading="lazy">
                            {% else %}
                                <div class="d-flex align-items-center justify-content-center h-100 bg-light">
                                    <span class="text-muted">Aucune image</span>
                                </div>
                            {% endif %}
                        </div>
                        <div class="card-body text-center flex-grow-1">
                            <h5 class="card-title fw-bold fs-4 text-primary">{{ produit.nom }}</h5>
                            <p class="card-text fs-5 text-muted">{{ produit.description }}</p>
                            <p class="fs-5"><strong>Prix:</strong> <span class="text-success">{{ produit.prixunitaire }} €</span></p>
                            <p class="fs-5"><strong>Stock:</strong> 
                                {% if produit.quantitestock > 0 %}
                                    <span class="text-success">{{ produit.quantitestock }}</span>
                                {% else %}
                                    <span class="text-danger">Rupture</span>
                                {% endif %}
                            </p>
                            <p class="fs-5"><strong>Catégorie:</strong> {{ produit.categorie.value }}</p>
                        </div>
                        <div class="card-footer text-center">
                            <a href="{{ path('app_produit_show', {'id': produit.id}) }}" class="btn btn-info me-2">
                                <i class="fas fa-eye"></i> Voir
                            </a>
                            <a href="{{ path('app_produit_edit', {'id': produit.id}) }}" class="btn btn-warning me-2">
                                <i class="fas fa-edit"></i> Modifier
                            </a>
                            <form action="{{ path('app_produit_delete', {'id': produit.id}) }}" method="post" id="delete-form-{{ produit.id }}" style="display:inline;">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ produit.id) }}">
                                <button class="btn btn-danger" type="submit">
                                    <i class="fas fa-trash"></i> Supprimer
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            {% else %}
                <div class="col-12">
                    <div class="alert alert-warning text-center fs-4">
                        <i class="fas fa-exclamation-triangle"></i> Aucun produit trouvé.
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>

    {% block javascripts %}
        {{ parent() }}
        <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
        <script>
            {% if app.session.flashbag.has('success') %}
                Swal.fire({
                    title: 'Succès!',
                    text: '{{ app.session.flashbag.get('success')[0] }}',
                    icon: 'success',
                    confirmButtonText: 'OK'
                });
            {% endif %}

            {% if app.session.flashbag.has('error') %}
                Swal.fire({
                    title: 'Erreur!',
                    text: '{{ app.session.flashbag.get('error')[0] }}',
                    icon: 'error',
                    confirmButtonText: 'OK'
                });
            {% endif %}

            // Confirmation de suppression avec SweetAlert
            {% for produit in produits %}
                document.querySelector('#delete-form-{{ produit.id }}').addEventListener('submit', function(event) {
                    event.preventDefault();
                    Swal.fire({
                        title: 'Êtes-vous sûr?',
                        text: "Vous allez supprimer ce produit!",
                        icon: 'warning',
                        showCancelButton: true,
                        confirmButtonText: 'Oui, supprimer!',
                        cancelButtonText: 'Annuler'
                    }).then((result) => {
                        if (result.isConfirmed) {
                            this.submit(); // Soumettre le formulaire pour la suppression
                        }
                    });
                });
            {% endfor %}
        </script>
    {% endblock %}
{% endblock %}
