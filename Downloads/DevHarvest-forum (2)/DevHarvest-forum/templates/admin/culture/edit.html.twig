{% extends 'admin.html.twig' %}

{% block title %}Modifier la culture{% endblock %}

{% block content %}
    <div class="container mt-5">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1>Modifier la culture</h1>
            <a href="{{ path('app_culture_index') }}" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Retour Ã  la liste
            </a>
        </div>

        <div class="card shadow-lg p-4">
            {{ form_start(form, {'attr': {'enctype': 'multipart/form-data'}}) }}

                <div class="mb-3">
                    {{ form_label(form.nom) }}
                    {{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
                </div>

                <div class="mb-3">
                    {{ form_label(form.description) }}
                    {{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}
                </div>

                <div class="mb-3">
                    {{ form_label(form.datePlantation) }}
                    {{ form_widget(form.datePlantation, {'attr': {'class': 'form-control'}}) }}
                </div>

                <div class="mb-3">
                    {{ form_label(form.dateRecolte) }}
                    {{ form_widget(form.dateRecolte, {'attr': {'class': 'form-control'}}) }}
                </div>

                {% if culture.image %}
                    <div class="mb-3">
                        <label>Image actuelle :</label><br>
                        <img src="{{ asset('uploads/images/' ~ culture.image) }}" alt="{{ culture.nom }}" class="img-thumbnail" width="200">
                    </div>
                {% endif %}

                <div class="mb-3">
                    {{ form_label(form.image) }}
                    {{ form_widget(form.image, {'attr': {'class': 'form-control'}}) }}
                </div>
<div class="form-group text-center mt-4">
            <button type="submit" class="btn btn-success btn-lg"><i class="fas fa-save"></i> Enregistrer</button>
            <a href="{{ path('app_culture_index') }}" class="btn btn-danger btn-lg ml-3">Annuler</a>
        </div>
            {{ form_end(form) }}
        </div>
    </div>

    <style>
        .card {
            max-width: 600px;
            margin: auto;
            border-radius: 10px;
        }
    </style>
{% endblock %}
