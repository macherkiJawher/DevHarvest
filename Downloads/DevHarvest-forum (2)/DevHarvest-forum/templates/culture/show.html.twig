{% extends 'client.html.twig' %}

{% block title %}Détails de la culture{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="text-center mb-4">{{ culture.nom }}</h1>

        <div class="row">
            <div class="col-md-6">
                <p><strong>Description :</strong> {{ culture.description }}</p>
                
                <p><strong>Date de plantation :</strong> {{ culture.datePlantation|date('d/m/Y') }}</p>
                <p><strong>Date de récolte :</strong> {{ culture.dateRecolte|date('d/m/Y') }}</p>
            </div>

            <div class="col-md-6">
                {% if culture.image %}
                    <div class="culture-image mb-4">
                        <img src="{{ asset('uploads/images/' ~ culture.image) }}" alt="{{ culture.nom }}" class="img-fluid">
                    </div>
                {% else %}
                    <p>Aucune image disponible.</p>
                {% endif %}
            </div>
        </div>

        <div class="mt-4">
            <a href="{{ path('culture_edit', {'id': culture.id}) }}" class="btn btn-warning">Modifier</a>
            <form action="{{ path('culture_delete', {'id': culture.id}) }}" method="POST" style="display:inline;">
                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ culture.id) }}">
                <button class="btn btn-danger" type="submit">Supprimer</button>
            </form>
            <a href="{{ path('app_culture_index') }}" class="btn btn-secondary">Retour à la liste</a>
        </div>
    </div>
{% endblock %}
