{% extends 'client.html.twig' %}

{% block title %}Modifier la parcelle{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1>Modifier la parcelle</h1>
            <a href="{{ path('parcelle_index') }}" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Retour Ã  la liste
            </a>
        </div>

        <div class="card shadow-lg p-4">
            {{ form_start(form) }}
                <div class="mb-3">
                    {{ form_label(form.zone) }}
                    {{ form_widget(form.zone, {'attr': {'class': 'form-control'}}) }}
                </div>

                <div class="mb-3">
                    {{ form_label(form.description) }}
                    {{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}
                </div>

                <div class="mb-3">
                    {{ form_label(form.superficie) }}
                    {{ form_widget(form.superficie, {'attr': {'class': 'form-control'}}) }}
                </div>

                <div class="mb-3">
                    {{ form_label(form.prixDeLocation) }}
                    {{ form_widget(form.prixDeLocation, {'attr': {'class': 'form-control'}}) }}
                </div>

                <div class="mb-3">
                    {{ form_label(form.dateDeLocation) }}
                    {{ form_widget(form.dateDeLocation, {'attr': {'class': 'form-control'}}) }}
                </div>

                <div class="mb-3">
                    {{ form_label(form.dateDeFinLocation) }}
                    {{ form_widget(form.dateDeFinLocation, {'attr': {'class': 'form-control'}}) }}
                </div>

                <div class="mb-3">
                    {{ form_label(form.etat) }}
                    {{ form_widget(form.etat, {'attr': {'class': 'form-control'}}) }}
                </div>

                <div class="mb-3">
                    {{ form_label(form.typeSol) }}
                    {{ form_widget(form.typeSol, {'attr': {'class': 'form-control'}}) }}
                </div>

                <div class="mb-3">
                    {{ form_label(form.cultureActuelle) }}
                    {{ form_widget(form.cultureActuelle, {'attr': {'class': 'form-control'}}) }}
                </div>

                <div class="mb-3">
                    {{ form_label(form.historiqueCultures) }}
                    {{ form_widget(form.historiqueCultures, {'attr': {'class': 'form-control'}}) }}
                </div>

                <div class="mb-3">
                    {{ form_label(form.image) }}
                    {{ form_widget(form.image, {'attr': {'class': 'form-control'}}) }}
                </div>

                <button type="submit" class="btn btn-primary"><i class="fas fa-save"></i> Enregistrer</button>
            {{ form_end(form) }}
        </div>
    </div>

    <style>
        .card {
            max-width: 600px;
            margin: auto;
            border-radius: 10px;
        }
    </style>
{% endblock %}
