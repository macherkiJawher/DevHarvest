<h1>Liste des produits</h1>

<ul>
    {% for produit in produits %}
        <li>
            <h3>{{ produit.nom }}</h3>
            <p>{{ produit.description }}</p>
            <p>Prix: {{ produit.prixunitaire }} â‚¬</p>

            <!-- Utilisation correcte de la route "ajouter_au_panier" -->
