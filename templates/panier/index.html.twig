{# templates/panier/index.html.twig #}
{% extends 'client.html.twig' %}

{% block title %}Panier{% endblock %}

{% block body %}
    <h1>Liste des produits disponibles</h1>

    <ul>
        {% for produit in produits %}
            <li>
                {{ produit.nom }} - {{ produit.prixunitaire }} €
                <a href="{{ path('ajouter_au_panier', {'id': produit.id}) }}" class="btn btn-primary">Ajouter au panier</a>
            </li>
        {% endfor %}
    </ul>

    <hr>

    <h2>Mon Panier</h2>
    {% if produitsPanier is not empty %}
        <ul>
            {% for item in produitsPanier %}
                <li>{{ item.produit.nom }} - {{ item.produit.prixunitaire }} € x{{ item.quantite }}</li>
            {% endfor %}
        </ul>
    {% else %}
        <p>Votre panier est vide.</p>
    {% endif %}

    <a href="{{ path('vider_panier') }}" class="btn btn-danger">Vider le panier</a>
{% endblock %}
