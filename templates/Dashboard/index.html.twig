{% extends 'client.html.twig' %}

{% block title %}Dashboard Produits{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1 class="text-center mb-4 text-dark">ðŸ“Š Dashboard des Produits</h1>

    <div class="row text-center justify-content-center">
        <!-- Total des Produits -->
        <div class="col-md-3">
            <div class="card shadow-lg p-4 border border-primary rounded-3 hover-card">
                <div class="card-body">
                    <i class="fas fa-box fa-3x text-primary"></i>
                    <h4 class="mt-3 text-primary">Total Produits</h4>
                    <p class="fs-2 fw-bold">{{ totalProduits }}</p>
                </div>
            </div>
        </div>

        <!-- Stock Total -->
        <div class="col-md-3">
            <div class="card shadow-lg p-4 border border-success rounded-3 hover-card">
                <div class="card-body">
                    <i class="fas fa-cubes fa-3x text-success"></i>
                    <h4 class="mt-3 text-success">Stock Total</h4>
                    <p class="fs-2 fw-bold">{{ totalStock }}</p>
                </div>
            </div>
        </div>

        <!-- Produits en rupture -->
        <div class="col-md-3">
            <div class="card shadow-lg p-4 border border-danger rounded-3 hover-card">
                <div class="card-body">
                    <i class="fas fa-exclamation-triangle fa-3x text-danger"></i>
                    <h4 class="mt-3 text-danger">Ruptures de stock</h4>
                    <p class="fs-2 fw-bold">{{ produitsEnRupture }}</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Graphiques -->
   <div class="row mt-5 justify-content-center">
    <!-- Graphique d'Ã©volution du stock -->
    <div class="col-md-6">
        <div class="card shadow-lg p-3 border border-dark rounded-3">
            <h5 class="text-center text-dark">ðŸ“‰ Ã‰volution du Stock</h5>
            <canvas id="stockChart" class="small-chart mt-2"></canvas>
        </div>
    </div>

    <!-- Graphique de rÃ©partition des produits -->
    <div class="col-md-5">
        <div class="card shadow-lg p-3 border border-dark rounded-3">
            <h5 class="text-center text-dark">ðŸ¥— RÃ©partition des Produits</h5>
            <canvas id="produitChart" class="small-chart mt-2"></canvas>
        </div>
    </div>
</div>

<style>
    .small-chart {
        max-width: 100%;
        height: 200px !important;
    }

    /* Style pour les cartes arrondies */
    .rounded-3 {
        border-radius: 15px !important;
    }

    /* Effet hover sur les cartes */
    .hover-card {
        transition: transform 0.3s ease, box-shadow 0.3s ease, background-color 0.3s ease;
    }
    .hover-card:hover {
        transform: translateY(-5px);
        box-shadow: 0px 10px 20px rgba(0, 0, 0, 0.2);
    }

    /* Tableaux */
    .custom-table {
        box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
    }
    /* Style des lignes du tableau */
    .table-striped tbody tr:hover {
        background-color:rgba(164, 238, 187, 0.77); /* Couleur gris clair pour survol */
    }
    /* En-tÃªtes du tableau */
    .table-dark th {
        background-color:rgba(7, 247, 59, 0.73); /* Fond plus sombre pour l'en-tÃªte */
        color: white;
    }

    /* Couleur des cartes au survol */
    .hover-card:hover.border-primary {
        background-color: rgba(54, 162, 235, 0.1); /* Bleu clair */
    }

    .hover-card:hover.border-success {
        background-color: rgba(40, 167, 69, 0.1); /* Vert clair */
    }

    .hover-card:hover.border-danger {
        background-color: rgba(220, 53, 69, 0.1); /* Rouge clair */
    }
</style>

<!-- Tableau des Produits -->
<div class="row mt-5">
    <div class="col-md-12">
        <div class="card shadow-lg p-4 border-0 rounded-3">
            <h3 class="text-center text-dark">ðŸ“¦ DÃ©tails des Produits</h3>
            <table class="table table-striped table-bordered mt-3 custom-table">
                <thead class="table-dark">
                    <tr>
                        <th>Nom</th>
                        <th>CatÃ©gorie</th>
                        <th>Prix (â‚¬)</th>
                        <th>Stock</th>
                    </tr>
                </thead>
                <tbody>
                    {% for produit in produits %}
                    <tr>
                        <td>{{ produit.nom }}</td>
                        <td>{{ produit.categorie.value }}</td>
                        <td>{{ produit.prixunitaire }}</td>
                        <td>
                            {% if produit.quantitestock > 0 %}
                                <span class="badge bg-success p-2 fs-6">{{ produit.quantitestock }}</span>
                            {% else %}
                                <span class="badge bg-danger p-2 fs-6">Rupture</span>
                            {% endif %}
                        </td>
                    </tr>
                    {% else %}
                    <tr>
                        <td colspan="4" class="text-center text-muted">Aucun produit trouvÃ©</td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
    document.addEventListener("DOMContentLoaded", function () {
        var ctxStock = document.getElementById("stockChart").getContext("2d");
        var ctxProduit = document.getElementById("produitChart").getContext("2d");

        new Chart(ctxStock, {
            type: "line",
            data: {
                labels: {{ categories|raw }},
                datasets: [{
                    label: "Stock Disponible",
                    data: {{ stocks|raw }},
                    borderColor: "rgba(54, 162, 235, 1)",
                    borderWidth: 2,
                    pointBackgroundColor: "rgba(54, 162, 235, 1)",
                    pointRadius: 4,
                    fill: false,
                    tension: 0.4
                }]
            },
            options: { responsive: true, maintainAspectRatio: false }
        });

        new Chart(ctxProduit, {
            type: "doughnut",
            data: {
                labels: {{ categories|raw }},
                datasets: [{
                    label: "RÃ©partition des Produits",
                    data: {{ stocks|raw }},
                    backgroundColor: ["#FF6384", "#36A2EB", "#FFCE56", "#4CAF50", "#9C27B0"],
                    hoverOffset: 4
                }]
            },
            options: { responsive: true, maintainAspectRatio: false }
        });
    });
</script>

{% endblock %}
