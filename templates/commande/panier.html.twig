{% extends 'client.html.twig' %}

{% block title %} Panier {% endblock %}

{% block body %}
    <h1>Votre Panier</h1>

    {% if panier is empty %}
        <div class="alert alert-warning">Votre panier est vide.</div>
    {% else %}
        <table class="table">
            <thead>
                <tr>
                    <th>Produit</th>
                    <th>Quantit√©</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for id, quantity in panier %}
                    <tr>
                        <td>Produit {{ id }}</td>
                        <td>{{ quantity }}</td>
                        <td>
                            <a href="{{ path('app_commande_supprimer', {'id': id}) }}" class="btn btn-danger">Supprimer</a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
        <a href="{{ path('app_commande_vider') }}" class="btn btn-warning">Vider le panier</a>
    {% endif %}
{% endblock %}
