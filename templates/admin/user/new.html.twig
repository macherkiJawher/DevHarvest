{% extends 'admin.html.twig' %}

{% block title %}Créer un Nouvel Utilisateur{% endblock %}

{% block content %}
<div class="container mt-5 d-flex justify-content-center">
    <div class="card shadow-lg border-0" style="width: 600px; border-radius: 12px; background-color: #ffffff;">
        <div class="card-header bg-dark text-white text-center py-3" style="border-top-left-radius: 12px; border-top-right-radius: 12px;">
            <h4 class="mb-0">Créer un Nouvel Utilisateur</h4>
        </div>
        <div class="card-body p-4 bg-light">
            {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}

            {% for field in form %}
                <div class="mb-3">
                    {{ form_label(field, null, {'label_attr': {'class': 'fw-bold text-secondary mb-1'}}) }}
                    {{ form_widget(field, {'attr': {'class': 'form-control'}}) }}
                    <div class="text-danger small">
                        {{ form_errors(field) }}
                    </div>
                </div>
            {% endfor %}

            <div class="d-flex justify-content-between mt-4">
                <a href="{{ path('admin_user_index') }}" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left"></i> Retour à la liste
                </a>
                <button type="submit" class="btn btn-success">
                    <i class="fas fa-user-plus"></i> Créer
                </button>
            </div>

            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}
