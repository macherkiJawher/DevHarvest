{% extends 'client.html.twig' %}

{% block title %}Modifier Machine{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="mb-4 text-center">Modifier la machine</h1>

        <div class="card p-4 shadow-sm">
            {{ form_start(form, {'attr': {'class': 'form'}}) }}
                <div class="form-group">
                    {{ form_widget(form, {'attr': {'class': 'form-control mb-3'}}) }}
                </div>
                <div class="d-flex justify-content-center">
                    <button type="submit" class="btn btn-primary mt-3 px-4 py-2">Enregistrer</button>
                </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
