{% extends 'client.html.twig' %}

{% block title %} Détails de la Zone {% endblock %}

{% block body %}
<div class="container mt-5">
    <h1 class="text-success">Détails de la Zone</h1>

    <table class="table table-bordered">
        <tbody>
            <tr>
                <th>Nom de la Zone</th>
                <td>{{ zone.nomZone }}</td>
            </tr>
            <tr>
                <th>Superficie</th>
                <td>{{ zone.superficieZone }} m²</td>
            </tr>
            <tr>
                <th>Localisation</th>
                <td>{{ zone.localisationZone }}</td>
            </tr>
        </tbody>
    </table>

    <h2 class="mt-4 text-primary">Granges associées</h2>
    {% if granges is empty %}
        <p>Aucune grange n'est associée à cette zone.</p>
    {% else %}
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Type</th>
                    <th>Capacité</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for grange in granges %}
                    <tr>
                        <td>{{ grange.id }}</td>
                        <td>{{ grange.typeGrange }}</td>
                        <td>{{ grange.capacite }}</td>
                        <td>
                            <a href="{{ path('app_grange_show', {'id': grange.id}) }}" class="btn btn-info btn-sm">Voir</a>
                            <a href="{{ path('app_grange_edit', {'id': grange.id}) }}" class="btn btn-warning btn-sm">Modifier</a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    {% endif %}

    <a href="{{ path('app_zone_index') }}" class="btn btn-secondary mt-3">Retour</a>
</div>
{% endblock %}
