{% extends 'client.html.twig' %}

{% block title %}Modifier la zone{% endblock %}

{% block body %}
<div class="container mt-5">
    <!-- Section Titre -->
    <div class="row">
        <div class="col-12 text-center mb-4">
            <h1>Modifier la zone</h1>
        </div>
    </div>

    <!-- Section Formulaire dans une carte -->
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-warning text-white">
                    <h2 class="mb-0">Edition de la zone</h2>
                </div>
                <div class="card-body">
                    {{ include('zone/_form.html.twig', {'button_label': 'Modifier'}) }}
                </div>
                <div class="card-footer text-right">
                    <a href="{{ path('app_zone_index') }}" class="btn btn-secondary">Retour Ã  la liste</a>
                </div>
            </div>
        </div>
    </div>

    <!-- Section Suppression -->
    <div class="row mt-4">
        <div class="col-md-8 offset-md-2">
            <div class="card border-danger">
                <div class="card-header bg-danger text-white">
                    <h3 class="mb-0">Supprimer la zone</h3>
                </div>
                <div class="card-body">
                    {{ include('zone/_delete_form.html.twig') }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
