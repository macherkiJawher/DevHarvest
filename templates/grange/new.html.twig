{% extends 'client.html.twig' %}

{% block title %}Créer une Grange{% endblock %}

{% block body %}
<div class="container mt-5">
    <!-- Titre avec du vert -->
    <div class="row">
        <div class="col-lg-12 text-center mb-4">
            <h1 class="text-success">Créer une Grange</h1>
            <p class="text-muted">Veuillez remplir le formulaire ci-dessous pour ajouter une nouvelle grange.</p>
        </div>
    </div>

    <!-- Formulaire dans une carte verte -->
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-lg border-success">
                <div class="card-header bg-success text-white text-center">
                    <h4 class="mb-0">Informations de la Grange</h4>
                </div>
                <div class="card-body">
                    {{ form_start(form, {'attr': {'enctype': 'multipart/form-data'}}) }}

                        <div class="form-group">
                            {{ form_label(form.type_grange, 'Type de Grange', {'label_attr': {'class': 'text-success'}}) }}
                            {{ form_widget(form.type_grange, {'attr': {'class': 'form-control border-success', 'placeholder': 'Ex: poule '}}) }}
                            {{ form_errors(form.type_grange) }}
                        </div>

                        <div class="form-group">
                            {{ form_label(form.capacite, 'Capacité', {'label_attr': {'class': 'text-success'}}) }}
                            {{ form_widget(form.capacite, {'attr': {'class': 'form-control border-success', 'placeholder': 'Ex: 500'}}) }}
                            {{ form_errors(form.capacite) }}
                        </div>

                        <div class="form-group">
                            {{ form_label(form.image, 'Image de la Grange', {'label_attr': {'class': 'text-success'}}) }}
                            {{ form_widget(form.image, {'attr': {'class': 'form-control-file'}}) }}
                            {{ form_errors(form.image) }}
                        </div>

                        <div class="text-center mt-4">
                            <button type="submit" class="btn btn-success px-4">Créer</button>
                            <a href="{{ path('app_grange_index') }}" class="btn btn-outline-success px-4">Retour</a>
                        </div>

                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
