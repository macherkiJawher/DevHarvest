        </div>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ grange.id }}</td>
            </tr>
            <tr>
                <th>Type_grange</th>
                <td>{{ grange.typeGrange }}</td>
            </tr>
            <tr>
                <th>Capacite</th>
                <td>{{ grange.capacite }}</td>
            </tr>
