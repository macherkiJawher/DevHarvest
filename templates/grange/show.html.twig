    <h1>Grange</h1>

     <div class="col-md-6">
            <h3>Image de la Grange</h3>
            <div class="image-container">
                {% if grange.image %}
                    <img class="img-fluid rounded shadow" src="/uploads/granges/{{ grange.image }}" alt="{{ grange.typeGrange }}">

                {% else %}
                    <img class="img-fluid rounded shadow" src="{{ asset('client/images/grange-placeholder.jpg') }}" alt="Image par dÃ©faut">
