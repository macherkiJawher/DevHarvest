{% extends 'client.html.twig' %}

{% block title %}Ajouter un Produit{% endblock %}

{% block body %}
<div class="container mt-4">
    <!-- Fil d'ariane -->
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="{{ path('app_home') }}">Accueil</a></li>
            <li class="breadcrumb-item"><a href="{{ path('app_produit_index') }}">Produits</a></li>
            <li class="breadcrumb-item active" aria-current="page">Ajouter</li>
        </ol>
    </nav>

    <div class="row justify-content-center">
        <div class="col-md-8">
            <!-- Messages de feedback -->
            {% for message in app.flashes('success') %}
                <div class="alert alert-success alert-dismissible fade show text-center" role="alert">
                    {{ message }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            {% endfor %}

            {% for message in app.flashes('error') %}
                <div class="alert alert-danger alert-dismissible fade show text-center" role="alert">
                    {{ message }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            {% endfor %}

            <!-- Carte contenant le formulaire -->
            <div class="card shadow-lg border-0">
                <div class="card-header bg-success text-white text-center">
                    <h2 class="mb-0" style="font-size: 2rem; font-weight: bold; color: black;">üçâüçá Ajouter un Produit üçáüçâ</h2>
                </div>
                <div class="card-body" style="font-size: 1.2rem; color: black;">
                    {{ include('produit/_form.html.twig') }}
                </div>
            </div>

            <!-- Bouton de retour -->
            <div class="text-center mt-4">
                <a href="{{ path('app_produit_index') }}" class="btn btn-outline-success btn-lg px-4 py-2">
                    <i class="fas fa-arrow-left"></i> Retour √† la Liste
                </a>
            </div>
        </div>
    </div>
</div>
{% endblock %}
