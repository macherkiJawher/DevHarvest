{% extends 'client.html.twig' %}

{% block title %}Modifier un Produit{% endblock %}

{% block body %}
<div class="container mt-4">
    <!-- Fil d'ariane -->
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb bg-light p-3 rounded">
            <li class="breadcrumb-item"><a href="{{ path('app_home') }}">Accueil</a></li>
            <li class="breadcrumb-item"><a href="{{ path('app_produit_index') }}">Produits</a></li>
            <li class="breadcrumb-item active" aria-current="page">Modifier</li>
        </ol>
    </nav>

    <div class="row justify-content-center">
        <div class="col-md-8">
            <!-- Carte contenant le formulaire -->
            <div class="card shadow-lg border-0">
                <div class="card-header bg-success text-white text-center">
                    <h2 class="mb-0" style="font-size: 2rem; font-weight: bold; color: black;">✏️ Modifier le Produit ✏️</h2>
                </div>
                <div class="card-body" style="font-size: 1.2rem; color: black;">
                    {{ include('produit/_form.html.twig') }}
                </div>
            </div>

            <!-- Bouton de retour -->
            <div class="text-center mt-4">
                <a href="{{ path('app_produit_index') }}" class="btn btn-outline-success btn-lg px-4 py-2">
                    <i class="fas fa-arrow-left"></i> Retour à la Liste
                </a>
            </div>
        </div>
    </div>
</div>

{% block javascripts %}
    {{ parent() }}
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>
        document.addEventListener("DOMContentLoaded", function() {
            {% if app.session.flashbag.has('success') %}
                Swal.fire({
                    title: 'Succès!',
                    text: '{{ app.session.flashbag.get('success')[0] }}',
                    icon: 'success',
                    confirmButtonText: 'OK',
                    timer: 3000
                });
            {% endif %}

            {% if app.session.flashbag.has('error') %}
                Swal.fire({
                    title: 'Erreur!',
                    text: '{{ app.session.flashbag.get('error')[0] }}',
                    icon: 'error',
                    confirmButtonText: 'OK',
                    timer: 3000
                });
            {% endif %}
        });
    </script>
{% endblock %}
{% endblock %}
